@page
@model RegisterModel
@{
    ViewData["Title"] = "Registar";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Crie uma nova conta.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirme a Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <hr />
            <h5>Dados Pessoais</h5>
            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control" autocomplete="Nome" aria-required="true" placeholder="nome" />
                <label asp-for="Input.FirstName">Nome</label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" autocomplete="Apelido" aria-required="true" placeholder="apelido" />
                <label asp-for="Input.LastName">Apelido</label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.BirthDate" class="form-control" aria-required="true"/>
                <label asp-for="Input.BirthDate">Data de Nascimento</label>
                <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
            </div>
            <hr />
            <h5>Endereço</h5>
            <div class="form-floating mb-3">
                <input asp-for="Input.Address.Street" class="form-control" aria-required="true" />
                <label asp-for="Input.Address.Street">Rua</label>
                <span asp-validation-for="Input.Address.Street" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Address.Number" class="form-control" aria-required="true" />
                <label asp-for="Input.Address.Number">Número</label>
                <span asp-validation-for="Input.Address.Number" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Address.City" class="form-control" aria-required="true" />
                <label asp-for="Input.Address.City">Concelho</label>
                <span asp-validation-for="Input.Address.City" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Address.Region" class="form-control" aria-required="true" />
                <label asp-for="Input.Address.Region">Distrito</label>
                <span asp-validation-for="Input.Address.Region" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Address.PostalCode" class="form-control" aria-required="true" />
                <label asp-for="Input.Address.PostalCode">Código Postal</label>
                <span asp-validation-for="Input.Address.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Address.Country" class="form-control" aria-required="true" />
                <label asp-for="Input.Address.Country">País</label>
                <span asp-validation-for="Input.Address.Country" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registar</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
