@model App.ViewModels.CommentViewModel

@{
    ViewData["Title"] = "Deletar Comentário";
}

<h1>@ViewData["Title"]</h1>

<h3>Tem certeza que quer deletar?</h3>

<div class="row">
    <div class="col-md-8">
        <dl>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Message)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Message)
            </dd>
        </dl>
    </div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger mt-3" />
        <a class="btn btn-info mt-3" href="javascript:window.history.back();">Voltar</a>
    </form>
</div>

