@model App.ViewModels.ChallengeViewModel

@{
    ViewData["Title"] = "Editar Desafio";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-10">
        <form enctype="multipart/form-data" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Tip" class="control-label"></label>
                <input asp-for="Tip" class="form-control"/>
                <span asp-validation-for="Tip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscountPercent" class="control-label"></label>
                <input asp-for="DiscountPercent" class="form-control" />
                <span asp-validation-for="DiscountPercent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RightAnswer" class="control-label"></label>
                <input asp-for="RightAnswer" class="form-control" />
                <span asp-validation-for="RightAnswer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label> Imagem Atual</label><br />
                <img src="@Model.Image" alt="@Model.Image" style="width: 70px; height: 100px" />
            </div>

            <div class="form-group">
                <label asp-for="ImageUpload" class="control-label">Nova Imagem</label>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="ImageUpload" asp-for="ImageUpload" />
                    <label style="display: none" id="img_name"></label>
                </div>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="@Model.Date" />
                <input type="hidden" asp-for="@Model.Image" />
                <input type="submit" value="Salvar" class="btn btn-primary mt-3" />
                <a class="btn btn-info mt-3" asp-action="List">Voltar</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $("#ImageUpload").change(function () {
            $("img_name").text(this.files[0].name);
            $("img_name")[].style.display = 'block';
        });

    </script>

}